{
  "name": "pikmin-pal",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Pikmin Pal is a fun and interactive desktop companion application.",
  "author": "Your Name <your.email@example.com>",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.pikmin.pal",
    "productName": "Pikmin Pal",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "reminderWindow.js",
      "stats.js",
      "events.js",
      "utils.js",
      "index.html",
      "assets/**/*",
      ".gitattributes",
      ".gitignore",
      "package.json"
    ],
    "extraResources": [],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/pikmin-pal.icns",
      "hardenedRuntime": false,
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/pikmin-pal.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/pikmin-pal.png"
    }
  }
}